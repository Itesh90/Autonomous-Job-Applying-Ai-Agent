# Database Configuration
DATABASE_URL=postgresql://jobagent:your_password@localhost:5432/jobagent_db
REDIS_URL=redis://localhost:6379/0
MONGODB_URL=mongodb://localhost:27017/jobagent_vectors

# Encryption (Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your_fernet_encryption_key_here

# LLM Provider Keys
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
HUGGINGFACE_API_KEY=hf-your-huggingface-key-here

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
MAX_CONCURRENT_JOBS=3
RATE_LIMIT_DELAY=5
DRY_RUN_MODE=false

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1
SESSION_SECRET=your_session_secret_here
JWT_SECRET_KEY=your_jwt_secret_here

# Browser Settings
HEADLESS_BROWSER=false
BROWSER_TIMEOUT=30000
USE_SELENIUM=true
USE_UNDETECTED_CHROME=true

# File Storage
UPLOAD_MAX_SIZE_MB=10
SCREENSHOT_RETENTION_DAYS=30
LOG_RETENTION_DAYS=90

# RAG Settings
CHROMA_PERSIST_DIRECTORY=./data/chroma
EMBEDDING_MODEL=all-MiniLM-L6-v2
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Job Sites Configuration
LINKEDIN_EMAIL=your_linkedin_email
LINKEDIN_PASSWORD=your_linkedin_password
INDEED_API_KEY=optional_indeed_api_key
