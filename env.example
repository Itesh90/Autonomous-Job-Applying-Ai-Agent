# Environment variables for JobAgent

# Database Configuration
DB_PASSWORD=your_secure_db_password_here
DATABASE_URL=postgresql://jobagent:${DB_PASSWORD}@db:5432/jobagent

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Encryption (Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your_fernet_encryption_key_here

# LLM Provider Keys (Optional - can be added via UI)
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
MAX_CONCURRENT_JOBS=3
RATE_LIMIT_DELAY=5

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
SESSION_SECRET=your_session_secret_here

# Browser Settings
HEADLESS_BROWSER=true
USE_SELENIUM=true
USE_UNDETECTED_CHROME=true
BROWSER_TIMEOUT=30000

# File Storage
UPLOAD_MAX_SIZE_MB=10
SCREENSHOT_RETENTION_DAYS=30
LOG_RETENTION_DAYS=90

# RAG Settings
RAG_DOCUMENTS_PATH=./data/rag_documents
RAG_PERSIST_DIRECTORY=./data/chroma_db
RAG_EMBEDDING_MODEL=all-MiniLM-L6-v2
RAG_TOP_K=3
